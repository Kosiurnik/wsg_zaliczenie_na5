<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/lbIName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lbIDesc"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/lbIDesc"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lbIDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbIName"
        android:layout_toLeftOf="@+id/btDelete"
        android:layout_toStartOf="@+id/btDelete"
        android:text="TextView"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btDelete"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:drawable/ic_delete" />

</RelativeLayout>